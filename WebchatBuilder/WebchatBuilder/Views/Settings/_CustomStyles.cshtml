@model WebchatBuilder.ViewModels.CreateTemplateViewModel

@{
    var headerRadius = "0";
    if (Model.RoundHeader)
    {
        headerRadius = "10px 10px 0 0";
    }
    var radius = "50%";
    if (!Model.RoundImages)
    {
        radius = "0";
    }
}

#wcb-body {
    background-color: @Model.BackgroundColor;
    border-radius: @headerRadius;
}

#wcb-chat-container #wcb-chat-header {
  color: @Model.HeaderFontColor;
}

#wcb-chat-container #wcb-chat-header h2 {
  color: @Model.HeaderFontColor;
}

#wcb-chat-container #wcb-chat-agent-typing {
    color: @Model.AgentTypingFontColor;
    background-color: @Model.AgentTypingBackgroundColor;
}

#wcb-chat-container #wcb-chat-body .chat-system-message {
  background-color: @Model.ServerBackgroundColor;
  color: @Model.ServerFontColor;
  border-bottom: solid 1px @Model.ServerSeparatorColor;
}

#wcb-chat-container #wcb-chat-body .chat-system-message .chat-msg-icon img {
  border: solid 3px @Model.ImageBorderColor;
  border-radius: @radius;
}

#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-icon .chat-msg-initial-wrapper {
  background-color: @Model.ImageBackgroundColor;
  border: solid 3px @Model.ImageBorderColor;
  border-radius: @radius;
}

#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-icon .chat-display-name {
  color: @Model.AgentNameColor;
}

#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-icon .chat-msg-initial-wrapper .chat-msg-initials {
  color: @Model.InitialsFontColor;
}

#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-text {
  border: solid 1px @Model.AgentBorderColor;
  background-color: @Model.AgentBackgroundColor;
  color: @Model.AgentFontColor;
}

#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-text a,
#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-text a:hover,
#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-text a:visited,
#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-text a:focus {
  color: @Model.AgentLinkColor;
}

#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-text .chat-msg-arrow {
  border-left-color: @Model.AgentBorderColor;
}

#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-text .chat-msg-pointer {
  border-left-color: @Model.AgentBorderColor;
}

#wcb-chat-container #wcb-chat-body .chat-received .chat-msg-icon img {
  border-radius: @radius;
  border: solid 3px @Model.ImageBorderColor;
}

#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-icon .chat-msg-initial-wrapper {
  background-color: @Model.ImageBackgroundColor;
  border: solid 3px @Model.ImageBorderColor;
  border-radius: @radius;
}

#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-icon .chat-display-name {
  color: @Model.VisitorNameColor;
}

#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-icon .chat-msg-initial-wrapper .chat-msg-initials {
  color: @Model.InitialsFontColor;
}

#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-icon img {
  border-radius: @radius;
  border: solid 3px @Model.ImageBorderColor;
}

#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-text {
  border: solid 1px @Model.VisitorBorderColor;
  background-color: @Model.VisitorBackgroundColor;
  color: @Model.VisitorFontColor;
}

#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-text a,
#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-text a:hover,
#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-text a:visited,
#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-text a:focus {
  color: @Model.VisitorLinkColor;
}

#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-text .chat-msg-arrow {
  border-right-color: @Model.VisitorBorderColor;
}

#wcb-chat-container #wcb-chat-body .chat-sent .chat-msg-text .chat-msg-pointer {
  border-right-color: @Model.VisitorBorderColor;
}

